{
  "name": "work-messenger",
  "version": "1.0.0",
  "description": "업무용 메신저 - 집중력을 높이는 깔끔한 디자인",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-packager . WorkMessenger --platform=win32 --arch=x64 --out=dist --overwrite --icon=assets/icon.ico"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "dompurify": "^3.3.0",
    "dotenv": "^16.3.1",
    "marked": "^17.0.1",
    "socket.io-client": "^4.7.2"
  },
  "build": {
    "appId": "com.work.messenger",
    "productName": "Work Messenger",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      ".env",
      "node_modules/**/*",
      "!node_modules/**/{CHANGELOG.md,README.md,readme.md,changelog.md}"
    ],
    "win": {
      "target": [
        "portable",
        "zip"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
